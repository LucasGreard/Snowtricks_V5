{% if app.request.attributes.get('_route')=='figures_edit' %}

	<h2>Images</h2>
	{% for image in figure.figureImgs %}

		<div>
			<img src="{{asset('/uploads/figures_img/' ~ image.imgName) }}" alt="Image" width="150px">
			<a href="{{ path('figure_deleteImg', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Delete</a>
		</div>

	{% endfor %}
	<h2>Video</h2>
	<div>
		{{figure.figureVideo | raw}}
	</div>
{% endif %}

<button class="btn">{{ button_label|default('Save') }}</button>
