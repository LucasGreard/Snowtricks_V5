{% extends 'base.html.twig' %}

{% block title %}
	SnowTricks - Edit figure 
{% endblock %}

{% block body %}
	<section>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
	</section>
	{% if (is_granted('ROLE_USER') and (app.user.userLastName ~ " " ~ app.user.userFirstName) == figure.figureAuthor) %}
		<h1>Edit Figures</h1>
		{{ include('figures/_form.html.twig', {'button_label': 'Update'}) }}
		<div class="text-center">
			{{ include('figures/editAndDeleteFigure.twig') }}
		</div>
	{% endif %}
	<div class="text-center">
		<a href="{{ path('figures_index') }}">back to list</a>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/images.js') }}"></script>
{% endblock %}
